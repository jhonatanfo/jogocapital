@page "/criarconta"

@inject NavigationManager _nav;

<section class="secao-iniciais">
    <div class="container sem-espaco">
        <div class="row sem-espaco">
            <div class="col-xs-12 col-sm-12 col-md-5 sem-espaco">
                <div class="logo-img">
                    <img src="img/IMAGEM LOGO FUNDO TRANSPARENTE.png" />
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-7 sem-espaco">
                <div class="entrar">
                    <div>

                        <h1 class="destaque">Cadastro</h1>

                        <div class="titulo"> Cadastrar por</div>

                        <div class="botao">
                            <button @onclick="@(()=>_nav.NavigateTo(" /criarcontacelular"))" class="btn-cel">
                                <img src="img/icon-celular.png" class="icon-celular">
                                CELULAR
                            </button>
                            <button @onclick="@(()=>_nav.NavigateTo(" /criarcontaemail"))" class="btn-email">
                                <img src="img/icon-email.png" class="icon-email">
                                E-MAIL
                            </button>
                        </div>



                        <button class="btn-voltar" @onclick="@(()=>_nav.NavigateTo(" /inicial"))">
                            <img src="img/icon-voltar.png">
                            <p>Voltar</p>
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>