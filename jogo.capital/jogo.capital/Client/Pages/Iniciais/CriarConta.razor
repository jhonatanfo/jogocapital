@@media screen and (max-width:1366px) {
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url('../img/fundinho.png');
        background-repeat: no-repeat;
    }

    .btn-senha {
        width: 270px;
        height: 35px;
        display: flex;
        align-items: center;
        flex-direction: row;
        margin-top: 4px;
        color: #808080;
        border: 1px solid #555;
        border-radius: 4px;
        background: #FFFFFF;
        font-family: "Tw Cen MT Std Medium Cond";
        font-size: 19px;
    }

    .container {
        width: 800px;
        height: 80vh;
        display: flex;
        box-shadow: 5px 5px 10px #000000;
    }

    .img {
        width: 40vw;
        height: 80vh;
        display: flex;
        position: relative;
        justify-content: center;
        align-items: center;
        background-color: #FABA0E;
        padding: 1rem;
    }

        .img img {
            width: 180px;
            height: 210px;
        }

        .voltar {
        font-size: 10px;
        color: #426CBB;
        margin-left: -352px;
        font-family: "Tw Cen MT Std Medium Cond";
        display: flex;
    }

        .voltar p {
            font-size: 20px;
            color: #426CBB;
        }


    .entrar {
        width: 60vw;
        height: 80vh;
        display: flex;
        align-items: center;
        flex-direction: column;
        background-color: #FFFFFF;
    }

        .entrar h1 {
            font-family: "Tw Cen MT Std Medium Cond";
            margin-left: -150px;
            margin-top: 140px;
            font-size: 80px;
            text-align: left;
            color: #D3D3D3;
        }

    .texto {
        font-family: "Tw Cen MT Std Medium Cond";
        font-size: 26px;
        margin-left: -250px;
        margin-top: 15px;
        color: #426CBB;
    }

    .botao {
        margin-top: 5px;
        font-family: "Tw Cen MT Std Medium Cond";
        font-size: 20px;
        margin-left: -125px;
        align-items: center;
    }

    .btn-cel {
        padding: 7px 38px;
        border: 1px solid #555;
        border-radius: 4px;
        margin-right: 10px;
        font-family: "Tw Cen MT Std Medium Cond";
        font-size: 15px;
        box-shadow: 1px -1px 1px #AEAEAE;
    }

    .fa-mobile-screen-button {
        font-size: 40px;
        color: #426CBB;
    }


    .btn-email {
        padding: 7px 38px;
        border: 1px solid #555;
        border-radius: 4px;
        font-family: "Tw Cen MT Std Medium Cond";
        font-size: 15px;
        box-shadow: 1px -1px 1px #AEAEAE;
    }

    .fa-envelope {
        font-size: 40px;
        color: #426CBB;
    }

    .btn-criar {
        padding: 5px 60px;
        font-size: 15px;
        font-family: "Tw Cen MT Std Medium Cond";
        background-color: #35C12F;
        color: #FFFFFF;
        border: 1px solid #35C12F;
        border-radius: 4px;
        margin-left: -195px;
        margin-top: -18px;
    }
}

