@@media screen and (max-width:1366px) {
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .topo {
        height: 130px;
        display: flex;
        flex-wrap: wrap;
        margin: 0 auto;
        background: #FABA0E;
        font-family: "Tw Cen MT Std Medium Cond";
    }

    .logo img {
        display: flex;
        width: 170px;
        height: 200px;
        margin-top: 27px;
        margin-left: 20px;
    }

    .menu {
        margin-top: 87px;
        margin-left: 10px;
        font-size: 32px;
    }

        .menu a {
            margin-right: 37px;
            color: #1b6bb3;
            text-decoration: none;
        }

    .jogar {
        font-family: "Tw Cen MT Std Medium Cond";
        margin-right: 37px;
        height: 42px;
        width: 125px;
        font-size: 40px;
        color: #1b6bb3;
        border: 1px solid #1b6bb3;
        border-radius: 5px;
    }

    .cad {
        font-family: "Tw Cen MT Std Medium Cond";
        margin-right: 37px;
        height: 31px;
        width: 160px;
        font-size: 32px;
        color: #ffffff;
        background: #1b6bb3;
        border: 0px solid #013ADF;
    }

    .linha {
        font-family: "Tw Cen MT Std Extra Bold";
        margin-top: 80px;
        display: flex;
        height: 120px;
        background: #1b6bb3;
        color: #ffffff;
        font-size: 85px;
        text-align: center;
        align-content: center;
        align-items: center;
        justify-content: center;
    }

    .btn {
        display: flex;
        margin-top: 60px;
        align-content: center;
        align-items: center;
        justify-content: center;
    }

    .jogoBicho img{
        width: 500px;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 20px;
        margin-right: 20px;
    }

    .bolao img {
        width: 570px;
        height: 390px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 20px;
        margin-right: 20px;
    }


    footer {
        display: block;
        color: #ffffff;
        height: 100%;
        font-family: "Tw Cen MT Std";
    }

    .rodape {
        height: 300px;
        margin-top: 50px;
        flex-direction: row;
        background: #292d2f;
        display: grid;
        grid-template-columns: repeat(3,1fr);
    }

    .copy p {
        margin-top: 260px;
        font-size: 13px;
        margin-left: 10px;
    }

    .redes {
        margin-top: 70px;
        text-align: center;
        align-items: center;
        justify-content: center;
        font-size: 13px;
    }

        .redes i {
            margin-top: 15px;
            text-align: center;
            align-items: center;
            font-size: 30px;
            margin-right: 15px;
            margin-left: 15px;
            margin-bottom: 15px;
        }

        .redes h2 {
            margin-top: 15px;
        }

        .redes .um {
            width: 140px;
            height: 70px;
        }

        .redes .dois {
            width: 140px;
            height: 58px;
            margin-bottom: 6px;
        }

    .direita {
        margin-top: 50px;
        margin-left: 180px;
        font-size: 12px;
        letter-spacing: 0.5px;
    }

        .direita img {
            height: 150px;
            width: 230px;
            margin-left: 20px;
            margin-bottom: 20px;
        }

    .fa-envelope {
        font-size: 16px;
        margin-right: 2px;
    }

    .direita h3 {
        margin-top: 10px;
        font-size: 14px;
    }

    .fa-ban {
        color: #ff0000;
        font-size: 18px;
    }
}

